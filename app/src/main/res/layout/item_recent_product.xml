<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:id="@+id/item_recent_product_img"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:fontFamily="@font/lato_regular"
            android:maxLines="3"
            android:textColor="@color/black"
            android:id="@+id/item_recent_product_title"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:id="@+id/item_recent_product_new_mrp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lato_regular"
            android:layout_marginTop="5dp"
            android:textColor="@color/color3"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_recent_product_new_sp"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_recent_product_new_pv"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/black"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color1"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:id="@+id/item_recent_product_old_mrp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/color3"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/item_recent_product_old_sp"
            android:textSize="14sp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/item_recent_product_old_pv"
            android:textSize="14sp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/black"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_recent_product_price_increase"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lato_regular"
                android:textColor="@android:color/holo_green_dark"
                />

        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>